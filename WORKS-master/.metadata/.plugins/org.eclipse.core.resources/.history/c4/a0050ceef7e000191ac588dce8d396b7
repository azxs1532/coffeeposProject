		botpa2.add(botpa4); botpa4.setBackground(Color.green);
		
		botpa4.add(botpa6,BorderLayout.NORTH);
		botpa4.add(botpa7, BorderLayout.CENTER);
		botpa4.add(botpa5,BorderLayout.SOUTH);
		botpanel1.add(botpa1);
