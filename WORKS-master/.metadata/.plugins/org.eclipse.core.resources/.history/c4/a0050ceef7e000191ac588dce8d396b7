	public static void main(String[] args) {
		new JPG();
	}
	@Override
	public void actionPerformed(ActionEvent e) {
		String namel = "", phonel = "";
		String input[] = new String[3];
		Object ob = e.getSource();
		JButton btn = (JButton)ob;
		System.out.println(btn.getName());
		System.out.println(btn.getText());
		if(btn.getName()!=null) {
			switch (btn.getName()) {
			case "아메리카노":
				sum += 3000;
				break;
			case "카페라떼":
				sum += 3000;
				break;
			case "딸기스무디":
				sum += 3000;
				break;
			case "망고스무디":
				sum += 3000;
				break;
			case "고구마라떼":
				sum += 3000;
				break;
			case "핫초코":
				sum += 3000;
				break;
			case "프라프치노":
				sum += 3000;
				break;
			case "그린티":
				sum += 3000;
				break;
			case "버블티":
				sum += 3000;
				break;
			case "블랙티":
				sum += 3000;
				break;
			}
		}else {
			switch (e.getActionCommand()) {
			
			case "주문":
				orderVO ordervo = new orderVO();
				namel = name.getText().trim();
				phonel = phone.getText().trim();
				System.out.println("주문");
				
				ordervo.setName(namel);
				ordervo.setPhone(phonel);
				ordervo.setMoney(sum);
				
				input[0] = namel;
				input[1] = phonel;
				input[2] = String.valueOf(sum);
				
				OrderDAO.insert(ordervo);
				
				model.addRow(input);
				
				break;
			case "취소":
				System.out.println("취소");
				sum = 0;
				name.setText("");
				phone.setText("");
				break;
				}
			}
		money.setText("금액 : "+sum+"원");
		System.out.println(sum);
		
			
	}
	private void view() {
		ArrayList<orderVO> list = OrderDAO.select();
		
		model.setNumRows(0); //model rows 초기화 시키기
		
		
		if(list.size()==0) {
			System.out.println("테이블에 저장된 글이 없습니다.");
		}else {
			for(orderVO vo1 : list) {
				String[] rows = new String[3];
				rows[0] = vo1.getName();
				rows[1] = vo1.getPhone();
				rows[2] = String.valueOf(vo1.money);
				model.addRow(rows);
			}
		}
	}
}
